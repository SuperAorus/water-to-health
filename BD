CREATE DATABASE water_to_health;

USE water_to_health;

CREATE TABLE peticiones (
    id INT(11) NOT NULL AUTO_INCREMENT,
    nombre_completo VARCHAR(50) NOT NULL,
    correo VARCHAR(100) NOT NULL,
    numero_telefono VARCHAR(50) NOT NULL,
    direccion VARCHAR(255) NOT NULL,
    vivienda VARCHAR(50) NOT NULL,
    tipo_agua VARCHAR(50) NOT NULL,
    menores VARCHAR(50) NOT NULL,
    mayores VARCHAR(50) NOT NULL,
    mascota VARCHAR(50) NOT NULL,
    fecha DATE NOT NULL,
    PRIMARY KEY (id)
);
